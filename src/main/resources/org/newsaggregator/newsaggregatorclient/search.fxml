<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="395.0" prefWidth="889.0" styleClass="generic-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fillHeight="false" prefHeight="48.0" prefWidth="600.0" spacing="30.0" styleClass="generic-container">
               <children>
                  <StackPane alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="searchTextField" maxHeight="1.7976931348623157E308" promptText="Tìm kiếm ở đây" styleClass="search-bar" StackPane.alignment="CENTER_RIGHT">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="10.0" left="10.0" top="10.0" />
                           </padding>
                        </TextField>
                        <Button fx:id="searchButton" minWidth="-Infinity" mnemonicParsing="false" prefHeight="35.0" styleClass="search-button" text="Tìm kiếm">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/images/search-primary-color.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <StackPane.margin>
                              <Insets right="7.0" />
                           </StackPane.margin>
                        </Button>
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="2.0" prefWidth="889.0" spacing="10.0">
               <children>
                  <ToggleButton fx:id="articlesToggleButton" mnemonicParsing="false" selected="true" text="Articles">
                     <toggleGroup>
                        <ToggleGroup fx:id="search" />
                     </toggleGroup></ToggleButton>
                  <ToggleButton fx:id="redditToggleButton" mnemonicParsing="false" text="Reddit post" toggleGroup="$search" />
                  <ComboBox fx:id="searchOrderComboBox" prefHeight="39.0" prefWidth="142.0" promptText="Sort by" />
                  <ComboBox fx:id="searchFieldComboBox" prefWidth="150.0" promptText="Search for" />
                  <ToggleButton fx:id="exactSearchToggleButton" mnemonicParsing="false" text="Exact search" />
               </children>
            </HBox>
            <ScrollPane fx:id="searchScrollPane" fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="200.0" prefWidth="200.0" styleClass="generic-transparent-container" vbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="searchVBox" spacing="12.0" styleClass="generic-transparent-container">
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@assets/css/main.css" />
      <URL value="@assets/css/search.css" />
   </stylesheets>
</AnchorPane>
